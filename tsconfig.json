{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve"
    // Add other compiler options as needed
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    // Adjust the path based on your project structure
    "src/**/*.tsx"
  ]
}
